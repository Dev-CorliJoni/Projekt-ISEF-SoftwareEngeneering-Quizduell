@using Quixduell.Blazor.Shared.ControlComponents;

@if (Studyset is not null)
{
    <div class="col div-container">
        <div class="container" style="padding: 0">
            <div class="row">
                <div class="col" style="padding-right:0.125em;">

                    <div class="row">
                        <div class="col col-sm-3 justify-content-start">
                            Creator:
                        </div>
                        <div class="col flex-sm-column justify-content-start">
                            @Studyset.Creator.UserName
                        </div>
                    </div>

                    <div class="row">
                        <div class="col col-sm-3 justify-content-start" style="padding-right: 0;">
                            Contributors:
                        </div>
                        <div class="col flex-sm-column justify-content-start" style="@(IsUserAdmin() ? "padding-right: 0" : "")">
                            <div class="container" style="padding-left: 0.8em; height: 8rem;">

                                <div class="row contributors-scroll-box" style="height: @(IsAddContributorActive() ? "5rem" : "100%");">
                                    @foreach (var c in Studyset.Contributors)
                                    {
                                        <div class="row">
                                            @c.UserName
                                        </div>
                                    }
                                </div>

                                @if (IsAddContributorActive())
                                {
                                    <div class="row">
                                        <ProposalTextBoxComponent ContributorSelectedAsync="@AddContributorAsync" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @if (IsUserAdmin())
                {
                    <div class="col col-sm-auto d-flex justify-content-end align-items-center" style="padding-left:0.125em; padding-right:0.25em">
                        <AddButtonComponent OnClick="@ActivateAddContributor" />
                    </div>
                }

            </div>
        </div>
    </div>
}