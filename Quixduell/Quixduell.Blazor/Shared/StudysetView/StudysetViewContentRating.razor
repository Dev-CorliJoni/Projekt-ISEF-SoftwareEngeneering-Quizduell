@using Quixduell.Blazor.Shared.ControlComponents
@using Quixduell.Blazor.Shared.StudysetView.RatingComponent

<div class="col div-container">

    <div class="container padding-0">
        <div class="row">
            <div class="col" style="padding-right:0">

                <div class="row">
                    <div class="col col-12 col-md-4">
                        <h3>
                            Rating
                        </h3>
                    </div>
                    <div class="col col-12 col-md-8 star-div">
                        <RatingComponent @bind-CurrentRating="Rating" @bind-IsEditable="IsEditing" />
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <textarea class="w-100 h-100 resize-none" readonly="@(IsEditing==false)" @bind="RatingText">
                        </textarea>
                    </div>
                </div>
                
            </div>
            <div class="col col-sm-auto d-flex justify-content-center align-items-center" style="padding-left:0.125em; padding-right:0.25em">
                <UploadButtonComponent @bind-IsEditing="IsEditing" UploadFunction="@Rate" />
            </div>
        </div>
    </div>

</div>