@if (Value is not null)
{
    <EditForm Model="Value" OnValidSubmit="OnValidSubmit">
        <div class="form-group">
            <label for="IssueFormControlTextarea">Problem melden für Frage: @Value.ReportedQuestion.Text</label>
            <InputTextArea class="form-control" id="IssueFormControlTextarea" @bind-Value=Value.Issue>

            </InputTextArea>
        </div>
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">OK</button>
            <button class="btn btn-danger" @onclick="OnAbort">Abbrechen</button>
        </div>
    </EditForm>
}