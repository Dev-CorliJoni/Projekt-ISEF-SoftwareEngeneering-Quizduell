@page "/"
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@inject GlobalSearch GlobalSearch
<PageTitle>Index</PageTitle>


@if(_lernsets is not null)
{
    //https://getbootstrap.com/docs/5.0/content/tables/

    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Kategorie</th>
                <th scope="col">Ersteller</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <Virtualize Items="@_lernsets" Context="Lernset" ItemSize="10" OverscanCount="5" >
                <tr>
                    <th scope="row"></th>
                    <td>@Lernset.Category.Name</td>
                    <td>@Lernset.Creator.Email</td>
                    <td><a href="\lernset\edit\@Lernset.Id">Edit</a></td>
                </tr>
                </Virtualize>
        </tbody>
    </table>


    <button class="btn" @onclick="InitSampleData">Init Sample Data</button>
    <p class="text-danger">@_errorMessage</p>
    
}