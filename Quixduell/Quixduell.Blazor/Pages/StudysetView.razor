@page "/viewstudyset"
@using Quixduell.Blazor.Shared.ControlComponents
@using System.ComponentModel
<PageTitle>Index</PageTitle>


@if (Studyset is not null)
{
    //https://getbootstrap.com/docs/5.0/content/tables/

    <div class="container">
        <div class="container mb-3">
            <div class="row">
                <div class="col form-group" style="float:left; display: flex; align-items: center;">
                    <h1 style="margin: 0;">
                        @Studyset.Name
                    </h1>

                    <CategoryComponent Category="@Studyset.Category"/>
                </div>

                <div class="col form-group" style="float:right; display: flex; align-items: center; justify-content:right">
                    <StartGameComponent />
                    <StarComponent Connection="@GetConnection()" />
                </div>
            </div>
        </div>
    </div>
}