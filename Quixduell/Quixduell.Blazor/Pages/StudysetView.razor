@page "/viewstudyset"
<PageTitle>Index</PageTitle>


@if (Studyset is not null)
{
    //https://getbootstrap.com/docs/5.0/content/tables/

    <div class="container">
        <div class="container mb-3">
            <div class="row">
                <div class="col form-group" style="float:left; display: flex; align-items: center;">
                    <h1 style="margin: 0;">
                        @Studyset.Name
                    </h1>

                    <div style='margin-left: 10px; background-color: red; opacity:0.6; padding: 3px; padding-right: 5px; padding-left: 5px; border-radius: 8px; box-sizing: border-box;'>
                        <h5 style="margin: 0; color:white">@Studyset.Category.Name</h5>
                    </div>
                </div>

                <div class="col form-group" style="float:right; display: flex; align-items: center;">
                    <div style='background-color: green; padding: 3px; padding-right: 5px; padding-left: 5px; border-radius: 8px; box-sizing: border-box;'>
                        <button class="btn" style="padding: 0px; font-size:larger; color:lightgrey" @onclick="Play">
                            Learn &#9654;
                        </button>
                    </div>

                    <div style='background-color: rgb(140, 140, 220); padding: 3px; padding-right: 5px; padding-left: 5px; border-radius: 8px; box-sizing: border-box;'>
                        <button class="btn" style="padding: 0px; font-size:x-large; color: @GetStarColor();" @onclick="StarFunction">
                            &#9733;
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}