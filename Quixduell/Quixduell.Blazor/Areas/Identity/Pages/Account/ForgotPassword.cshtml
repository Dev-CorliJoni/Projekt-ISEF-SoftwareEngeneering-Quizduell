@page
@using Quixduell.Blazor.Areas.Identity.Pages.Account
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Passwort vergessen?";
}

<h1 class="d-flex justify-content-center">@ViewData["Title"]</h1>

<div class="row d-flex justify-content-center" style="margin-top:3rem">
    <div class="col-md-4">
        <form method="post">
            <h2 class="d-flex justify-content-center">Gebe deine E-Mail ein.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary mt-2">Passwort zurücksetzen</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
