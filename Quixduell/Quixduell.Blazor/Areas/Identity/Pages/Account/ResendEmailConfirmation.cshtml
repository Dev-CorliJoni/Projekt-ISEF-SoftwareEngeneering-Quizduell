@page
@using Quixduell.Blazor.Areas.Identity.Pages.Account
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Bestätigungslink erneut senden";
}

<h1 class="d-flex justify-content-center">@ViewData["Title"]</h1>

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <h2 class="row d-flex justify-content-center">Trage deine E-Mail ein.</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Erneut senden</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
